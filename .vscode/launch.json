  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "src/cmd/main.go",
      "env": {
        "KUBECONFIG": "${workspaceFolder}/src/kubeconfig.yaml",
      },
      "args": [
        "--metrics-bind-address=:8080",
        "--metrics-secure=false"
      ]
    },
    {
      "name": "Debug Go end-to-end test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/src/test/e2e",
      "env": {},
      "args": ["./test/e2e/", "-v", "-ginkgo.v"],
      "showLog": true,
      "buildFlags": ""
    },
    {
      "name": "Debug Go unit test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/src/internal/controllers/node",
      "env": {},
      "args": ["./internal/controllers/node/", "-v", "-ginkgo.v"],
      "showLog": true,
      "buildFlags": ""
    },
  ]
}
